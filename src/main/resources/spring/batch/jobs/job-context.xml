<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:batch="http://www.springframework.org/schema/batch" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
                        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        ">

    <import resource="../beans/bean-context.xml" />

    <batch:job id="job">
        <batch:listeners>
            <batch:listener ref="myJobExecutionListener" />
        </batch:listeners>
        <batch:step id="step1">
            <tasklet ref="createTableTasklet" />
            <batch:next on="COMPLETED" to="step2" />
            <batch:listeners>
                <batch:listener ref="createTableStepExecutionListener" />
            </batch:listeners>
        </batch:step>
        <batch:step id="step2">
            <batch:tasklet>
                <batch:chunk reader="participanteReader" processor="participanteProcessor"
                    writer="participanteWriter" commit-interval="1">
                </batch:chunk>
                <batch:listeners>
                    <batch:listener ref="participanteReaderListener" />
                    <batch:listener ref="participanteProcessorListener" />
                    <batch:listener ref="participanteWriterListener" />
                </batch:listeners>
            </batch:tasklet>
            <batch:listeners>
                <batch:listener ref="participanteStepExecutionListener" />
            </batch:listeners>
        </batch:step>
